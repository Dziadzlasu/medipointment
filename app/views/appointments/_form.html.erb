<%= simple_form_for appointment, html: { class: "appointment form" } do |f| %>
  <% if appointment.errors.any? %>
    <div class="error-message">
      <%= appointment.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :physician_id, collection: @physicians, label_method: :full_name, value_method: :id, input_html: { autofocus: true } %>
  <%= f.hidden_field :patient_id, value: @patient_id %>
  <%= f.input :start_time, minute_step: 20 %>
  <%= f.input :price, input_html: { min: 0, step: 0.01 } %>
  <%= f.submit class: "btn btn--secondary", value: "Zapisz" %> <%= link_to "Anuluj", appointments_path, class: "btn btn--secondary" %>
<% end %>
